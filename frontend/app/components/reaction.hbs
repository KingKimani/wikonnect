<BsButton disabled={{if this.me.isAuthenticated false true}} {{on "click" (fn this.like @chapterId)}}>
  <MdIcon @icon="thumb-up" @size=15 />{{@likes}}
</BsButton>
<BsButton disabled={{if this.me.isAuthenticated false true}} {{on "click" (fn this.dislike @chapterId)}}>
  <MdIcon @icon="thumb-down" @size=15 />{{@dislikes}}
</BsButton>